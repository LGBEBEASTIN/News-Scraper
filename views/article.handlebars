<div class="row">
    <h2 class="card">{{article.title}}</h2>
    <h4 class="card-body">{{body}}</h4>
</div>

<div class="row">
    <form action="/comment/{{article._id}}" method="POST" class="card-body">
        <h4>Comment Here</h4>
        <div class="row">

            <div class="form-group">
                <input type="text" placeholder="Name" name="name">
            </div>

            <div class="form-group">
                <input type="text" placeholder="Comment" name="comment">
            </div>

        </div>
        <div class="row">

            <div class="form-group">
                <input class="btn" type="submit" value="Submit">
            </div>
            
        </div>
    </form>
</div>
<div class="row">
    <div class="col">
        <h4>Comments:</h4>

        {{#if article.comment}}
        {{#each article.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}<p>
        </div>
        {{/each}}

        {{else}}
        <p>No Comments</p>
        {{/if}}

    </div>
</div